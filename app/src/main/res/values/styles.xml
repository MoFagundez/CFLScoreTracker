<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PointsButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/standard_button_height</item>
        <item name="android:layout_marginRight">@dimen/standard_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_button_margin</item>
        <item name="android:layout_marginLeft">@dimen/standard_button_margin</item>
        <item name="android:layout_marginStart">@dimen/standard_button_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_button_margin</item>
        <item name="android:onClick">clickAddScore</item>
    </style>

    <style name="TeamName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/standard_text_margin</item>
        <item name="android:textSize">48sp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TeamScore">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/score_text_margin</item>
        <item name="android:textSize">@dimen/score_text_size</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
